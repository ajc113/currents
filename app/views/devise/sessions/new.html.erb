
<% provide(:title, "Log In") %>
<% nofollow %>
<% noindex %>



<div id="content" role="main"></div>
 
<section class="section home-section fullscreen parallax skrollable skrollable-between" id="home" data-bgattach="" data-bottom-top="background-position:0% 0%" data-top-bottom="background-position:0% 0%" style="height: 15vh !important;">
  <div class="vcenter-container bg-lightgray"> 
    <div class="vcenter">
      <div class="container big-block skrollable skrollable-between" data-0="opacity:1;" data-top-bottom="opacity:0;" style="opacity: 1;">
      </div>
    </div>
  </div>
</section> <!-- end header section -->


<div id="login-section" class="fullheight">
  <div class="vcenter-container">
    <div class="vcenter">
      <div class="container">
        <div class="row">
          <div class="col-sm-6 col-sm-push-3 col-lg-4 col-lg-push-4">
              <div class="mb100">
              <% flash.each do |key, value| %>
                  <div role="alert" class="alert alert-danger alert-dismissable">
                  <%= devise_error_messages! %>
                  <%= value %>
                  <% end %>
                </div>          <!-- header image -->
            <h1 class="logo text-center">
                <a>
                    <img src="<%= image_path('currentslogoblack.png')%>"  alt="Logo" style="height: 75px;">
                </a>
            </h1> <!-- end header image -->
              <div class="form-wrapper">
                  <h2 class="title-underblock custom mb30">Login</h2>
                  <div class="panel-body">
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <form action="#">
                      <div class="form-group">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, class: "form-control", autofocus: true, required: true %>
                      </div><!-- End .from-group -->
                      <div class="form-group mb10">
                          <%= f.label :password %><br />
                          <%= f.password_field :password, class: "form-control", autocomplete: "on", required: true %>
                      </div><!-- End .from-group -->
                      <div class="form-group text-right">
                          <a href="recover-password.html" class="add-tooltip" data-placement="top" title="Recover your password">
                            <%= render "devise/shared/links" %>
                          </a>
                      </div><!-- End .form-group -->
                      <div class="form-group mt15">
                          <div class="checkbox">
                            <label class="custom-checkbox-wrapper">
                              <span class="custom-checkbox-container">
                                  <input type="checkbox" name="remember" id="remember" value="true">
                                  <span class="custom-checkbox-icon"></span>
                              </span>
                             <span>
                              <% if devise_mapping.rememberable? -%>
                              <%= f.label :remember_me %>
                              <% end %>
                              </span>
                            </label>
                          </div><!-- End .checkbox -->
                      </div><!-- End .form-group -->
                      <div class="form-group mb5">
                          <button type="submit" value="Log In"class="btn btn-custom">
                          <%= "Log In Now" %>
                         </button>
                      </div><!-- End .from-group -->
                  
                    <% end %> 
                  </form>
                  </div>
              </div><!-- End .form-wrapper -->
          </div><!-- End .col-sm-6 -->
        </div><!-- End .row -->
      </div><!-- End .container -->
      <div class="mb100"></div>
    </div><!-- End .vcenter -->   
  </div><!-- End .vcenter-container -->
</div>

</div>
