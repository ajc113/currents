<% provide(:title, "Posts") %>

<%= image_tag 'harbor2.jpg',  class: 'img-responsive hidden-xs', style: 'display:block; opacity: .55' %>


<section>
	<div class="content-wrapper">	

		<% if user_signed_in? %>
			<div class="row">
				<div class="nav navbar-nav">	
						<%= link_to "New Post", new_post_path, class: "btn btn-oval btn-inverse" %>
						<%= link_to "Logout", new_post_path, class: "mb-sm btn btn-inverse" %>
				</div>
			</div>
		<% end %>	
		<!-- button row -->
			<div class="row">
				<div class="col-lg-9">
					
					<!-- posts row -->
						<div class="row">
							<!-- Posts -->
								<% @posts.each do |post| %>
									<div class="panel">
										<div class="panel-body bg-info">
										<!-- 	<h3 class="mv-sm"> -->

												<%= link_to post.title, post %>
										<!-- 	</h3>	 -->
										</div>
										<div class="panel-body">
											<p class="clearfix">
												<%= post.body %>
												<br>
													<span class="pull-left">
														<%= post.created_at.strftime(" %B, %d, %Y") %>
													</span>
											</p>
										</div>
									</div>				
								<% end %>
						</div>

				</div>
			</div>			

			</div>
					<% flash.each do |name, msg| %>
					<% content_tag(:div, msg, class: "alert") %>
					<% end %>
			</div>


	</div>
</section>