<div class="panel-body text-md">	
	<%= form_for @post do |f| %>
	<% if @post.errors.any? %>

		<div id="errors">
			<h2> 
				<%= pluralize(@post.errors.count, "error" ) %> prevented this post from saving
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
			</ul>	
				<% end %>
		</div>	
	<% end %>
			<div class="field form-group">
			<%= f.label :title %> <br>
			<%= f.text_field :title, class: 'form-control'  %> <br>
		

		
			<%= f.label :body %> <br>
			<%= f.text_area :body, class: 'form-control' %> <br>
			</div>

		<div role="group" aria-label="..." class="btn-group">
			<%= f.submit %> <br>
		</div>	

		<% end %>
</div>	