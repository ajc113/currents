<%= form_for ([@post, @post.comments.build]) do |f| %>


	<div class="field form-group">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: 'form-control' %>
	<div>
	<div class="field form-group">	
	<%= f.label :body %><br >
	<%= f.text_area :body, class: 'form-control' %>
	</div>
	
	<div class="field form-group">	
	<%= f.submit %>
	</div>

<% end %>