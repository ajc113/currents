<div class="panel"> 
	<div class="panel-body">
		<div class="media"> 
			<div class="media-body"> 
				<div class="media-body">
           <h4 id="media-heading" class="media-heading">
           		<%= comment.name %>
              <small><%= time_ago_in_words(comment.created_at) %> ago </small>
            </h4>
               <p><%= comment.body %></p>
               <p style="margin: 2px"> <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button", data: {confirm: 'Are you sure?'}%>
               </p>
				</div>
			</div>
		</div>
	</div>			 
</div>