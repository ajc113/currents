<% provide(:title, "Spots") %>
<%= image_tag 'harbor2.jpg',  class: 'img-responsive hidden-xs', style: 'display:block; opacity: .55' %>



<div class="content-wrapper">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-1 col-md-9">
      <!-- spots row -->
      <div class="row">
        <!-- Sposts -->
        <% @spots.each do |spot| %>
          <div class="panel widget">
            <!-- post heading -->
            <div class="posts-heading panel-heading">
              <div class="bb">
                <h1 class="mv-lg">
                  <%= link_to spot.title, spot, {:style => 'color: #84868C'} %>
                </h1>
                <p class="date">
                  Submitted <%= time_ago_in_words(spot.created_at) %> a go
                </p>
              </div>
            </div>
            <div class="panel-body text-md posts-body">
              <span>
                <%= spot.body.truncate(250).html_safe %>
              </span>
              <%= link_to "READ MORE", spot_path(spot) %><br>
            </div>
          </div>
        <% end %>
      </div>
       <div class="center">
      <%= paginate @spots %>
    </div> 

    </div>



    <!-- Aside -->
    <div class="col-lg-3 col-md-3 posts-sidebar">
      <!-- Search-->
      <div class="panel widget bg-inverse-light">
        <div class="panel-body">
            <strong>Search Spots</strong><br>
            <form class="form-horizontal">
                  <%= form_tag spots_path, :method => 'get' do %>
                  <p><%= text_field_tag  :q, params[:q]  %></p>
                  <%= submit_tag 'Search', :name => nil, class: "mb-sm btn btn-inverse btn-outline" %>
                  <% end %>
            </form>
        </div>
      </div>

      <!-- Categories-->
      <div class="panel widget bg-inverse-light">
        <div class="panel-body">
          <div class="text-md m0">
            <strong>Fishing Locations</strong><br>
            <ul class="list-unstyled" >
                <li><%= link_to "MA Inshore", ma_inshore_path %></li>
                  <li><%= link_to "Gulf of Maine", gulf_of_maine_path %></li>
                  <li><%= link_to "South of Vineyard", south_of_vineyard_path %></li>
                  <li><%= link_to "East of Chatham", east_of_chatham_path %></li>
            </ul>
          </div>
        </div>
      </div>
      <% if current_admin_user %>
        <%= link_to "Add New Spot", new_spot_path, class: "btn btn-danger  btn-lg" %>
      <% end %>    
    </div>
  </div>
</div>


<div>
  <% flash.each do |name, msg| %>
    <% content_tag(:div, msg, class: "alert") %>
  <% end %>
</div>