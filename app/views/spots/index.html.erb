<% provide(:title, "Spots") %>
<%= image_tag 'harbor2.jpg',  class: 'img-responsive hidden-xs', style: 'display:block; opacity: .55' %>



<div class="content-wrapper">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10">
      <!-- spots row -->
      <div class="row">
        <!-- Sposts -->
        <% @spots.each do |spot| %>
          <div class="panel panel-default">
            <!-- post heading -->
            <div class="posts-heading panel-heading">
              <div class="bb">
                <h1 class="mv-lg">
                  <%= link_to spot.title, spot, {:style => 'color: #84868C'} %>
                </h1>
                <p class="date">
                  Submitted <%= time_ago_in_words(spot.created_at) %> a go
                </p>
              </div>
            </div>
            <div class="panel-body text-md posts-body">
              <span>
                <%= spot.body.truncate(250).html_safe %>
              </span>
              <%= link_to "READ MORE", spot_path(spot) %><br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- Aside -->
    <div class="col-lg-2 col-md-2 posts-sidebar">
      <!-- Search-->
      <div class="panel panel-default">
        <div class="panel-body">
            <strong>Search Spots</strong><br>
            <form class="form-horizontal">
                  <%= form_tag spots_path, :method => 'get' do %>
                  <p><%= text_field_tag  :q, params[:q]  %></p>
                  <%= submit_tag 'Search', :name => nil  %>
                  <% end %>
            </form>
        </div>
      </div>
      <!-- Categories-->
      <div class="panel panel-default">
        <div class="panel-body"><strong>Locations</strong><br>
            <ul class="list-unstyled">
               <li>
                <% @tags.each do |tag| %>
                <li><%= link_to tag.name, tag_path(tag.name) %></li>
                <% end %>
               </li>
            </ul>
        </div>
      </div>
      <% if current_admin_user %>
        <%= link_to "Add New Spot", new_spot_path, class: "btn btn-inverse btn-lg" %>
      <% end %>    
    </div>
  </div>
</div>

<div>
  <% flash.each do |name, msg| %>
    <% content_tag(:div, msg, class: "alert") %>
  <% end %>
</div>