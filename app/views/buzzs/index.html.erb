<%= image_tag 'harbor2.jpg',  class: 'img-responsive hidden-xs', style: 'display:block; opacity: .55' %>



  <div id="table-container">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-3">

        </div>
        <div class="col-lg-6">
          <div class="panel b m0">
            <div class="panel-body text-center">
              <div class="panel-body bg-info-dark">
                <ul><h1>Channel 68</h1></ul>
                <ul><h3>Real time buzz from on the water</h3></ul>
              </div>        
              <div <div class="table-responsive">              
                <span class="text-left">    
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Date</th>
                        <th>Post</th>
                        <th>Vessel</th>
                        <th>Port</th>
                      </tr>
                    </thead>
                 
                      <tbody>  
                      <% @buzzs.each do |buzz| %>
                      <tr>
                        <td> <%= buzz.created_at.try(:strftime, '%m/%d/%y %r') %> 
                        </td>
                        <td class="wd-td1"><%= buzz.post %></td>
                        <td><%= buzz.user.try(:vessel_name) %></td>
                        <td><%= buzz.user.try(:home_port) %></td>
                      </tr>
                        <% end %>
                    
                    </tbody> 
                  </table>
                 </span> 
              </div>
              <div class="p-lg text-center">
                <%= link_to 'New Post', new_buzz_path, class: "btn btn-inverse btn-lg" %>
              </div>          
     




            </div> 
          </div>
        </div>
        <div class="col-lg-3">
          <div class="p-lg text-center">
            <%= link_to 'Create New Post', new_buzz_path, class: "btn btn-inverse btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>


 