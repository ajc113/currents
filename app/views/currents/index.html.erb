<!-- Features -->
<div class="row" style="margin-left: 0px;">
  <div class="container-fluid">
    <!-- heatmaps container -->
    <div class="col-lg-4">
        <a href="maps" class="list-group-item">
            <div class="panel-body bg-gray-light" style="height: 108px !important;">
                <div class="row vertical-align" style="margin-left: 0px!important; margin-right: 0px!important;">
                    <div class="col-lg-4 col-xs-4">
                        <%= image_tag 'mapcopy.png', class: 'img-responsive usp-icon', style: 'display:block' %>
                    </div>
